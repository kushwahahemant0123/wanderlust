<% layout('layouts/boilerplate') -%>

<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
   
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
 .tax-toggle{
border: 1px solid black;
border-radius: 1rem;
height: 3.25rem;
padding: 1rem;
margin-left:4rem;
  }
</style>
  <body>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire-flame-curved"></i></div>
        <p>Tranding</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-key"></i></div>
          <p>New</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing pools</p>
        </div>

        <div class="filter">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Top cities</p>
        </div>
          <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Castles</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></i></div>
            <p>Beach</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Amazing views</p>
          </div>
           
            
            <div class="filter">
              <div><i class="fa-solid fa-mug-saucer"></i></div>
              <p>Bed & breakfast</p>
            </div>

            <div class="tax-toggle">
              <div class="form-check form-switch form-check-reverse ">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total before taxes</label>
              </div></div>
            
    </div>
    <!-- <h3>All listings</h3> -->
    <!-- <form action="http://localhost:8080/listings/new" method="get">
        <button>Create new listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <%for(listing of allListings){%>
        <a class="card-link" href="/listings/<%=listing._id%>">
          <div class="card card-index listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 15rem;">
            <div class="card-body">
              <h5 class="card-title">
                <%=listing.title%>
              </h5>
              <h6 class="without-tax ">&#8377;<%=listing.price.toLocaleString("en-IN")%> /Night</h6>
              <h6 class="tax-info hidden">&#8377;<%=(listing.price +(listing.price * 18)/100).toLocaleString("en-IN")%> /Night &nbsp; &nbsp; <u>total before taxes</u></h6>
              <p class="card-text">
                <%=listing.description%>
              </p>
            </div>
          </div>
        </a>


        <%}%>
    </div>
    <script>
      let taxSwitch= document.getElementById('flexSwitchCheckReverse');
      taxSwitch.addEventListener("click",()=>{
        let taxInfo= document.getElementsByClassName('tax-info');
        let withoutTax=document.getElementsByClassName("without-tax");
        
        for(info of taxInfo ){
          info.classList.toggle("hidden");
            
        }
        for(without of withoutTax){
          without.classList.toggle("hidden");
        }
        });
        
    
       
      
    </script>

  </body>